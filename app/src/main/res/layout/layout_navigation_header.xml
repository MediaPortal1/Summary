<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:padding="@dimen/nav_header_margin_views"
    android:background="@drawable/studio_bg"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigation_header_circleimageview"
        android:layout_width="@dimen/nav_header_image_height"
        android:layout_height="@dimen/nav_header_image_height"
        android:src="@drawable/photo_card"
        app:civ_border_color="@android:color/white"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        />

    <TextView
        android:id="@+id/navigation_header_maintextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation_header_subtextview"
        android:text="@string/info_name"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/navigation_header_subtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/info_email"
        android:textSize="@dimen/text_small"
        />
</RelativeLayout>